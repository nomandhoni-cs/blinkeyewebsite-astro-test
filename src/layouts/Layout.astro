---
import { Sidebar } from "@/components/Sidebar";
import "../styles/global.css";
import StaryBackground from "./StaryBackground.astro";

interface Props {
  title: string;
  description?: string;
}

const navigation = [
  {
    title: "Home",
    path: "/",
    icon: "Home",
  },
  {
    title: "README",
    path: "/readme",
    icon: "FileText",
  },
  {
    title: "MIT License",
    path: "/mit-license",
    icon: "Scale",
  },
];

const {
  title,
  description = "A beautiful dashboard built with Astro and shadcn/ui",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <script is:inline>
      const getThemePreference = () => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        return window.matchMedia("(prefers-color-scheme: dark)").matches
          ? "dark"
          : "light";
      };
      const isDark = getThemePreference() === "dark";
      document.documentElement.classList[isDark ? "add" : "remove"]("dark");

      if (typeof localStorage !== "undefined") {
        const observer = new MutationObserver(() => {
          const isDark = document.documentElement.classList.contains("dark");
          localStorage.setItem("theme", isDark ? "dark" : "light");
        });
        observer.observe(document.documentElement, {
          attributes: true,
          attributeFilter: ["class"],
        });
      }
    </script>
    <script>
      // Initialize layout
      import { initLayout } from "../stores/layout";
      initLayout();
    </script>
    <meta
      name="google-site-verification"
      content="TkrpS4PY-sUn-Dg71tDXhnUYdDA5N3HkznJvJUYPbR0"
    />
  </head>
  <body>
    <Sidebar navigation={navigation} client:load />

    <main class="flex flex-1 flex-col">
      <div class="relative isolate">
        <div
          class="absolute inset-x-0 -z-10 transform-gpu overflow-hidden"
          aria-hidden="true"
        >
          <StaryBackground />
        </div>
        <slot />
      </div>
    </main>
  </body>
</html>
